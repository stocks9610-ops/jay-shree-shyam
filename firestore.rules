service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user is admin (via custom claim OR checking user doc)
    // For now we check the user doc role since claims require cloud functions setup
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper: Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTIONS ---

    // Users
    match /users/{userId} {
      // Privacy FIX: Only the owner or an admin can read the full profile
      // This protects emails, wallet addresses, and balances from being leaked.
      allow read: if isOwner(userId) || isAdmin();
      
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Update Policy:
      // 1. Owner can update fields (including balance for the simulation game) 
      //    BUT STRICTLY BLOCKED from changing their own 'role'.
      // 2. Admin can update everything.
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'frozenBalance', 'introBalance']));
      
      allow delete: if isAdmin();
    }
    
    // Withdrawals
    match /withdrawals/{withdrawalId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin(); // Only admins approve/reject
      allow delete: if isAdmin();
    }

    // Deposits (New)
    match /deposits/{depositId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Traders (Public Read, Admin Write)
    match /traders/{traderId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Strategies (Public Read, Admin Write)
    match /strategies/{strategyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Settings (Public Read, Admin Write)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
