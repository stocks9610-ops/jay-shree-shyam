service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user is admin (via custom claim OR checking user doc)
    // For now we check the user doc role since claims require cloud functions setup
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper: Check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- COLLECTIONS ---

    // Users
    match /users/{userId} {
      allow read: if isAuthenticated(); // Anyone logged in can read basic profiles (needed for leaderboards/social)
      allow create: if isAuthenticated() && request.auth.uid == userId; // User creates own profile on signup
      
      // Update restrictions:
      // 1. Owner can update fields EXCEPT 'role' and 'balance' (unless simulated in frontend, but backend should ideally block balance)
      //    For this specific app, we allow balance updates from client for the simulation game.
      // 2. Admin can update everything
      allow update: if isAdmin() || (isOwner(userId) && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
      
      allow delete: if isAdmin();
    }
    
    // Withdrawals
    match /withdrawals/{withdrawalId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin(); // Only admins approve/reject
      allow delete: if isAdmin();
    }
    
    // Traders (Public Read, Admin Write)
    match /traders/{traderId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Strategies (Public Read, Admin Write)
    match /strategies/{strategyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Settings (Public Read, Admin Write)
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
